@model IEnumerable<Plan>
@{
    ViewData["Title"] = "Home Page";
}
<div style="width:100%;" align="center">
    <a asp-controller="Plan" asp-action="Index" asp-route-mode="All" class="btn btn-dark">All</a>
    <a asp-controller="Plan" asp-action="Index" asp-route-mode="Done" class="btn btn-success">Just Done</a>
    <a asp-controller="Plan" asp-action="Index" asp-route-mode="NotDone" class="btn btn-danger">Not Done</a>
    <br />
    <br />
    @if (Model.Count() == 0)
    {
        <p>You Do Not Have Any Plan</p>
    }
    else
    {
        <partial name="_Table" />
    }
</div>